{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES2018", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
  },
  "include": ["**/*.ts", "**/*.js", "**/.*.js", "scripts/.common.ts"],
  "exclude": ["**/node_modules"],
}
